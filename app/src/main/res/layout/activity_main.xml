<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/curve_top"
      app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></android.support.v7.widget.Toolbar>

    <LinearLayout
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/setlocation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/white"
        android:background="@drawable/curve_corner_button"
        android:layout_marginBottom="5dp"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/make_list_btn"
        android:text="Make List"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/white"
        android:background="@drawable/curve_corner_button"
/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/help_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:src="@mipmap/red_info_icon"/>
        <View
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/yellow"></View>
        <View
            android:id="@+id/bottom_lll"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_above="@id/bottom_ll"
            android:layout_marginBottom="5dp"
            android:background="@color/yellow"></View>

        <View
            android:id="@+id/bottom_llll"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_above="@id/bottom_lll"
            android:layout_marginBottom="5dp"
            android:background="@color/yellow"></View>
    </LinearLayout>
</RelativeLayout>